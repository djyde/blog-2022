---
import BaseLayout from "./BaseLayout.astro";
import avatar from "../images/avatar.jpg";
import config from "../config";

---

<BaseLayout
  title={Astro.props.title
    ? `${Astro.props.title} | ${config.title}`
    : config.title}
>
  <div class="max-w-[640px] mt-12 md:mx-auto mx-5 space-y-14">
    <nav class="flex justify-between items-center">
      <a href="/">
      <h1 class="font-medium text-lg">{config.title}</h1>
      </a>

      <div class="flex gap-3 items-center">
        {config.navs.map(nav => {
          return (
            <div>
              <a class="link" href={nav.url}>
                {nav.title}
              </a>
            </div>
          )
        })}
      </div>
    </nav>

    <section>
      <slot />
    </section>
  </div>

  <footer class="py-12 text-center text-sm">
    Copyright Â© 2014-2024 Randy Lu
  </footer>
</BaseLayout>
